@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 222.2 47.4% 11.2%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 222.2 84% 4.9%;
    --radius: 0.5rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 210 40% 98%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 212.7 26.8% 83.9%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
}

/* Custom utility classes for the coaching SaaS components */
@layer components {
  /* Container responsive */
  .container-custom {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }

  /* Card base styling */
  .card-base {
    @apply bg-white rounded-lg shadow-sm border border-primary-200 p-6;
  }

  /* Button variants */
  .btn-primary {
    @apply bg-primary-900 text-white px-4 py-2 rounded-lg hover:bg-primary-800 transition-colors;
    @apply focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2;
  }

  .btn-secondary {
    @apply bg-primary-100 text-primary-900 px-4 py-2 rounded-lg hover:bg-primary-200 transition-colors;
    @apply focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2;
  }

  .btn-accent {
    @apply bg-accent-600 text-white px-4 py-2 rounded-lg hover:bg-accent-700 transition-colors;
    @apply focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2;
  }

  /* Loading states */
  .loading-pulse {
    @apply animate-pulse bg-primary-200 rounded;
  }

  /* Focus ring utility */
  .focus-ring {
    @apply focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2;
  }

  /* Hover lift effect */
  .hover-lift {
    @apply hover:shadow-md hover:-translate-y-0.5 transition-all duration-200;
  }

  /* Form input base */
  .input-base {
    @apply w-full px-4 py-3 border border-primary-300 rounded-lg transition-colors;
    @apply focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500;
    @apply bg-white placeholder:text-primary-400;
  }

  .input-error {
    @apply border-red-300 bg-red-50 focus:ring-red-500 focus:border-red-500;
  }

  /* Sidebar styling */
  .sidebar-base {
    @apply fixed left-0 top-0 h-full bg-primary-950 text-white transition-all duration-300 z-50;
  }

  .sidebar-item {
    @apply w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors;
    @apply hover:bg-primary-800 focus:outline-none focus:ring-2 focus:ring-accent-500;
  }

  .sidebar-item-active {
    @apply bg-accent-600 text-white;
  }

  /* Mobile bottom navigation */
  .bottom-nav-base {
    @apply fixed bottom-0 left-0 right-0 bg-white border-t border-primary-200 z-50;
  }

  .bottom-nav-item {
    @apply flex-1 flex flex-col items-center py-2 px-1 transition-colors;
    @apply focus:outline-none focus:ring-2 focus:ring-accent-500;
  }

  .bottom-nav-item-active {
    @apply text-accent-600;
  }

  /* Dashboard card styling */
  .dashboard-card {
    @apply bg-white rounded-lg shadow-sm border p-6 transition-all duration-200;
    @apply hover:shadow-md hover:-translate-y-0.5;
  }

  .dashboard-card-accent {
    @apply border-accent-200 bg-accent-50;
  }

  /* Calendar styling */
  .calendar-day {
    @apply h-24 p-1 border border-primary-200 cursor-pointer hover:bg-primary-50 transition-colors;
  }

  .calendar-day-today {
    @apply bg-accent-50 border-accent-300;
  }

  .calendar-event {
    @apply text-xs p-1 rounded text-white truncate cursor-pointer;
  }

  /* File upload styling */
  .upload-area {
    @apply border-2 border-dashed rounded-lg p-8 text-center cursor-pointer transition-colors;
    @apply border-primary-300 hover:border-accent-400 hover:bg-primary-50;
  }

  .upload-area-active {
    @apply border-accent-500 bg-accent-50;
  }

  /* Avatar sizing */
  .avatar-sm {
    @apply w-8 h-8 text-xs;
  }

  .avatar-md {
    @apply w-10 h-10 text-sm;
  }

  .avatar-lg {
    @apply w-12 h-12 text-base;
  }

  .avatar-xl {
    @apply w-16 h-16 text-lg;
  }

  /* Status indicators */
  .status-online {
    @apply bg-green-500;
  }

  .status-offline {
    @apply bg-primary-400;
  }

  .status-busy {
    @apply bg-red-500;
  }

  .status-away {
    @apply bg-yellow-500;
  }
}

/* Mobile responsive utilities */
@layer utilities {
  .mobile-stack {
    @apply flex-col space-y-4;
  }

  .desktop-grid {
    @apply grid-cols-4 gap-6;
  }

  /* Scrollbar styling */
  .scrollbar-thin {
    scrollbar-width: thin;
    scrollbar-color: rgb(156 163 175) transparent;
  }

  .scrollbar-thin::-webkit-scrollbar {
    width: 6px;
  }

  .scrollbar-thin::-webkit-scrollbar-track {
    background: transparent;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb {
    background-color: rgb(156 163 175);
    border-radius: 3px;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background-color: rgb(107 114 128);
  }

  /* Text truncation utilities */
  .truncate-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .truncate-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
}

/* Animation keyframes */
@keyframes slideIn {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes slideOut {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.95);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* Animation utilities */
.animate-slide-in {
  animation: slideIn 0.3s ease-out;
}

.animate-slide-out {
  animation: slideOut 0.3s ease-out;
}

.animate-fade-in {
  animation: fadeIn 0.2s ease-out;
}

.animate-fade-out {
  animation: fadeOut 0.2s ease-out;
}

.animate-scale-in {
  animation: scaleIn 0.2s ease-out;
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }

  .print-break {
    page-break-after: always;
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .card-base {
    @apply border-2 border-primary-900;
  }

  .btn-primary {
    @apply border-2 border-primary-900;
  }

  .input-base {
    @apply border-2 border-primary-900;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .hover-lift {
    @apply hover:transform-none hover:shadow-sm;
  }

  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Focus visible support for better accessibility */
.focus-visible:focus-visible {
  @apply ring-2 ring-accent-500 ring-offset-2 outline-none;
}

/* Custom selection colors */
::selection {
  background-color: rgb(59 130 246 / 0.3);
  color: rgb(30 58 138);
}

::-moz-selection {
  background-color: rgb(59 130 246 / 0.3);
  color: rgb(30 58 138);
}
